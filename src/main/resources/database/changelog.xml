<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--CREATING TABLES-->
    <changeSet id="1" author="Stas" runOnChange="true">

        <!--CREATING A TABLE USERS-->
        <createTable tableName="users">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <!--CREATING A TABLE ROLES-->
        <createTable tableName="roles">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="role_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--CREATING A TABLE USER_ROLES-->
        <createTable tableName="user_roles">
            <column  name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column  name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Stas">
        <!--INSERTING ROLES IN 'ROLES' TABLE-->
        <insert tableName="roles">
            <column name="role_name" value="USER_ROLE"></column>
        </insert>
        <insert tableName="roles">
            <column name="role_name" value="MODERATOR_ROLE"></column>
        </insert>
        <insert tableName="roles">
            <column name="role_name" value="ADMIN_ROLE"></column>
        </insert>
    </changeSet>
</databaseChangeLog>