<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--CREATING TABLES-->
    <changeSet id="1" author="Stas" runOnChange="true">

        <!--CREATING A TABLE USERS-->
        <createTable tableName="users">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--CREATING A TABLE ROLES-->
        <createTable tableName="roles">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="role_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--CREATING A TABLE USER_ROLES-->
        <createTable tableName="user_roles">
            <column  name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column  name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_user_role"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>

        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_role_user"
                                 referencedColumnNames="id"
                                 referencedTableName="roles"/>

        <addPrimaryKey columnNames="user_id, role_id"
                       constraintName="pk_user_role"
                       tableName="user_roles"/>

        <!--INSERTING ROLES IN 'ROLES' TABLE-->
        <insert tableName="roles">
            <column name="role_name" value="ROLE_USER"></column>
        </insert>
        <insert tableName="roles">
            <column name="role_name" value="ROLE_MODERATOR"></column>
        </insert>
        <insert tableName="roles">
            <column name="role_name" value="ROLE_ADMIN"></column>
        </insert>

        <!--CREATING A TABLE TRAINS-->
        <createTable tableName="trains">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column  name="start_station" type="int" >
                <constraints nullable="false"/>
            </column>
            <column  name="end_station" type="int" >
                <constraints nullable="false"/>
            </column>
            <column  name="number" type="int" >
                <constraints unique="true" nullable="false"/>
            </column>
            <column  name="seats" type="int" >
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--CREATING A TABLE STATIONS-->
        <createTable tableName="stations">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="station_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--CREATING A TABLE TRAIN_STATIONS-->
        <createTable tableName="train_stations">
            <column  name="train_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column  name="station_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="train_id"
                                 baseTableName="train_stations"
                                 constraintName="fk_train_station"
                                 referencedColumnNames="id"
                                 referencedTableName="trains"/>

        <addForeignKeyConstraint baseColumnNames="station_id"
                                 baseTableName="train_stations"
                                 constraintName="fk_station_train"
                                 referencedColumnNames="id"
                                 referencedTableName="stations"/>

        <addPrimaryKey columnNames="train_id, station_id"
                       constraintName="pk_train_station"
                       tableName="train_stations"/>

        <!--CREATING A TABLE WAYS-->
        <createTable tableName="ways">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column  name="first_station_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column  name="second_station_id" type="int" >
                <constraints nullable="false"/>
            </column>
            <column  name="distance" type="double" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Stas">
        <!--CREATING A TABLE PASSENGERS-->
        <createTable tableName="passengers">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--CREATING A TABLE TICKETS-->
        <createTable tableName="tickets">
            <column  name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="train_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="passenger_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>